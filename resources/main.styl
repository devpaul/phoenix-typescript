@import variables

.reveal {
	.agenda {
		display: grid;
		grid-template-columns: 3em auto;
		grid-column-gap: 0.6em;
		text-align: left;
		width: 40vw;

		.time {
			grid-column: 1 / 2;
		}

		.detail {
			grid-column: 2 / 2;
		}
	}

	.top-right {
		position: absolute;
		top: 0;
		right: 0;
	}

	.center-full-container {
		display: flex;
		justify-content: center;
		align-items: center;
		height: 100vh;
		flex-direction: column;
	}

	.sponsors {
		display: flex;
		justify-content: center;

		.amp {
			display: flex;
			justify-content: center;
			align-content: center;
			line-height: 112px;
			font-size: 5rem;
			margin: 0 1rem;
		}
	}

	.removeFormatting {
		border: none !important;
		background: none !important;
		box-shadow: none !important
		margin: 0;
	}

	.absolute-center {
		position: absolute;
		top: 0;
		width: 100%;
		bottom: 0;
		display: flex;
		justify-content: center;
		align-items: center;
		color: white;
		align-content: center;
		flex-direction: column;
	}

	.two-column {
		display: flex;
		justify-content: center;

		> * {
			flex: 1 1;
		}

		&.medium {
			> * {
				max-width: 500px;
			}
		}
	}

	ul {
		&.no-style {
			list-style-type: none;
		}

		&.spaced {
			li {
				margin-bottom: 20px;
			}
		}

		.no-style {
			list-style: none;
			margin-left: -36px;
		}

		.twitter {
			&:before {
				image-li("../assets/images/twitter.png")
			}
		}

		.github:before {
			image-li("../assets/images/GitHub-Mark/PNG/GitHub-Mark-32px.png")
		}
	}

	.slides > section {
		&.full {
			height: 100%
			width: 100%
		}

		.background-image-container {
			top: 0;
			left: 0;
			position: absolute;
			opacity: 0.5;

			img {
				border: none;
				margin: 0;
			}
		}


		img {
			&.strip {
				background: none;
				border: none;
				box-shadow: none;
			}

			&.full {
				max-width: 100%;
				max-height: 100%;
			}

			&.medium {
				min-height: 20vh;
			}

			&.gh-mark {
				height: 49px;
				margin: 0 10px 0 0;
			}
		}

		.mosaic {
			display: flex;
			max-width: 100%;
			flex-wrap: wrap;
			justify-content: center;

			> * {
				margin: 10px;
			}
		}
	}
}
